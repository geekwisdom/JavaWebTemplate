<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Geek Wisdom Java Web Template</display-name>
    <description>
	 Geek Wisdom Web Template
    </description>

<welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
</welcome-file-list>
<servlet>
   <servlet-name>MasterPage</servlet-name>
   <servlet-class>MasterPage</servlet-class>
</servlet>
<servlet>
   <servlet-name>index</servlet-name>
   <servlet-class>index</servlet-class>
</servlet>

<servlet-mapping>
   <servlet-name>MasterPage</servlet-name>
   <url-pattern>*.html</url-pattern>
</servlet-mapping>

<context-param>
    <param-name>master-page-path</param-name>
    <param-value>/WEB-INF/masterpages/</param-value>
</context-param>

</web-app>
